<div class="w-full sm:w-2/4 lg:w-1/3  flex p-4 ">
  <div class="w-full flex flex-wrap justify-center border-2 px-4 py-3 mb-4 border-slate-300 hover:bg-slate-50 rounded shadow-lg shadow-indigo-200 bg-white  cursor-pointer">
    <div class="w-full flex">
      <div class="w-16 h-16 flex justify-center items-center content-center bg-white border border-slate-300 rounded-full p-2">
        <%= inline_svg_tag("icons/#{icon}", class:'w-14 h-14 stroke-1 text-slate-700')%>
      </div>
      <div class="w-full flex flex-wrap items-center ml-6 gap-6">
        <span class="w-full text-3xl text-slate-700"><%= title %></span>
        <span class="w-full text-slate-700"><%= description %></span>
      </div>
    </div>
    <div class="w-full flex mt-4 border-t-2 border-t-slate-700">
      <%= link_to "#{link1}", href1, class: 'w-full text-lg text-center px-7 py-4 hover:bg-indigo-200' %>
      <%= link_to "#{link2}", href2, class: 'w-full text-lg text-center px-7 py-4 hover:bg-indigo-200' if href2.present? %>
    </div>
  </div>
</div>
