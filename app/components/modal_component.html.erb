<%= turbo_frame_tag 'modal' do %>
  <div  data-controller="modal"
        data-launch-modal-target="modal"
        data-action="turbo:submit-end->modal#submitEnd keyup@window->modal#closeWithKeyboard click@window->modal#closeBackground"
        class="modal" >
    <div  aria-labelledby="modal-title" 
          role="dialog" 
          aria-modal="true"
          class="fixed z-10 inset-0 overflow-y-auto" >
      <div class="flex items-end justify-center min-h-screen pt-4 px-4 text-center sm:block sm:p-0">
        <div aria-hidden="true"
             class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" ></div>
        <span aria-hidden="true"
              class="hidden sm:inline-block sm:align-middle sm:h-screen" >
              &#8203;
        </span>
        <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-4xl sm:w-full border-t border-black">
          <h3 id="modal-title" class="w-full font-semibold text-white text-3xl flex justify-center bg-black py-4">
            <%= title %>
          </h3>
          
          <div class="sm:flex sm:items-start justify-center">
            <div class="text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
              <%= content %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>