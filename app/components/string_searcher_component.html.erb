<%= form_with url: path,
              method: :post,
              autocomplete: 'disabled',
              class: form_style,
              data: {
                controller: 'debounce',
                'debounce-target': 'form',
                'searcher-target': 'input'
              }  do |form| %>
              
  <% if kind.present? %>
    <%= form.hidden_field :kind,
                          value: kind %>
                
  <% end %>
              
  <%= form.search_field attribute.to_sym,
                        value: regex,
                        placeholder: placeholder,
                        data: {
                          action: 'input->debounce#search'
                        },
                        class: input_style,
                        autocomplete: 'off' %>
<% end %>
