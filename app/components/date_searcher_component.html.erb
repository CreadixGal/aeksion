<%= form_with url: path,
              method: :get,
              local: true,
              class: 'w-full relative search-form-component focus:outline-none focus:shadow-outline' do |form| %>

  <%= form.hidden_field :name, value: name if name.present? %>
  <%= form.hidden_field :kind, value: kind if kind.present? %>
  <%= form.hidden_field :product_zero, value: zero if zero.present? %>
  <div class="flex items-center gap-6">
    <div class="flex flex-col relative">
      <%= form.text_field attribute.to_sym, 
                          data: { 
                            controller: 'flatpickr',
                            flatpickr_target: 'search'
                          },
                          class: 'form-input w-full bg-white shadow rounded border-0 p-3' %>
      <div class="absolute top-1/4 right-2" data-debounce-target="icon">
        <%= inline_svg_tag('icons/calendar.svg', class: 'w-6 h-6 stroke-gray-600')%>
      </div>
    </div>

    <div class="flex">
      <%= form.submit 'Buscar', class: 'max-w-fit py-1 px-4 font-medium text-red-400 border border-red-400 rounded-xl hover:bg-red-400 hover:duration-500 hover:text-white cursor-pointer' %>
    </div>
  </div>
<% end %>