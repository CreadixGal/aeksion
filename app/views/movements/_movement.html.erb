<%= turbo_frame_tag dom_id(movement), class: 'w-full' do %>
  <div id="<%= dom_id movement %>" class="w-full flex justify-between border-x-2
  border-t-[0.5px] border-b-[0.5px] border-indigo-500 bg-indigo-50 opacity-70">
    <div class="w-1/12 flex justify-center items-center content-center px-4">
      <%= render CheckboxComponent.new(id: movement.id, name: 'movement_ids[]', options: { value: movement.id }) %>
    </div>
    <div class="w-9/12 flex justify-center items-center text-indigo-600 text-center font-semibold border-x border-indigo-400 py-2 px-4">
      <div class="w-full flex justify-start border-x border-indigo-300">
        <%= movement.date.strftime('%H:%M %d-%m-%y') %>
      </div>
      <div class="w-full flex justify start">
        <%= movement.rate.price %>
      </div>
      <div class="w-full flex justify start">
        <%= movement.rate.kind %>
      </div>
    </div>
    <div class="w-2/12 flex justify-center px-6">
      <% if action_name != "show" %>
        <%= link_to inline_svg_tag('icons/eye.svg', class: 'w-4 h-4 text-indigo-600'), movement, class: 'rounded-lg py-3 ml-2 px-5 bg-indigo-100  hover:bg-indigo-300 inline-block font-medium m-2' %>
        <%= link_to inline_svg_tag('icons/pencil-square.svg', class: 'w-4 h-4 text-indigo-600'), edit_movement_path(movement), class: 'rounded-lg py-3 ml-2 px-5 bg-indigo-100 hover:bg-indigo-300  inline-block font-medium m-2' %>
        <%= button_to movement, method: :delete, form: { data: { turbo_frame: "_top" } }, class: 'rounded-lg py-3 ml-2 px-5 bg-indigo-100 hover:bg-amber-300 inline-block font-medium m-2' do %>
          <%= inline_svg_tag('icons/trash.svg', class: 'w-4 h-4 text-indigo-600') %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
