
<% if params[:delivery_rider_ids].present? && flash[:success] %>
  <% params[:delivery_rider_ids].each do |id| %>
    <%= turbo_stream.remove "delivery_rider_#{id}" %>
  <% end %>
  <%= turbo_stream.replace "pagy_nav_container" %>
  <%= turbo_stream.replace "count", render(TitleCountComponent.new(title: 'delivery_riders', count: DeliveryRider.count)) %>
<% end %>

<%= turbo_stream.prepend "notification", partial: "layouts/shared/notification" %>