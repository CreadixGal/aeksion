<li id="<%= dom_id customer %>" class="table-row-li">
  <div class="w-full flex justify-between">
    <div class="w-1/12 flex justify-center items-center content-center px-4">
      <%= render CheckboxComponent.new(id: customer.id, name: 'customer_ids[]', options: { value: customer.id }) %>
    </div>
    <%= form_with(model: customer, class: 'contents') do |form| %>
      <div class="w-9/12 text-indigo-600 text-center font-semibold border-x border-indigo-400 py-2 px-4 relative z-0 group"> 
        <%= form.text_field :name, placeholder: 'Introduce nombre de cliente', class:'w-1/2 mx-auto block py-2.5 px-0 w-full text-lg text-slate-700 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer'%>
        <% if customer.new_record? %>
          <%= form.number_field :price, step: :any, placeholder: 'Introduce price pickup', required: true, class:'w-1/2 mx-auto block py-2.5 px-0 w-full text-lg text-black bg-transparent border-0 border-b-2 border-slate-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer'%>
        <% end %>
        <% if customer.errors.any? %>
          <div id="error_explanation" class="bg-red-50 text-red-500 border-b-8 border-b-red-600 px-3 py-2 font-medium rounded-lg mt-3">
            <h2><%= pluralize(customer.errors.count, 'error') %> prohibited this customer from being saved:</h2>

            <ul>
              <% customer.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
      <div class="table-actions">
        <%= form.submit '✔️', class: 'wrapper-icon-button-default' %>
        <%= link_to customers_path, class: 'wrapper-icon-button-default' do %>
          <%= inline_svg_tag('icons/x-circle.svg', class: 'icon-button-default') %>
        <% end %>
      </div>
    <% end %>
  </div>
</li>
