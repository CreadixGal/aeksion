<li id="<%= dom_id customer %>" class="table-row-li">
  <%= turbo_frame_tag dom_id(customer), class: 'w-full flex justify-between' do %>
    <div class="w-1/12 flex justify-center items-center content-center px-4">
      <%= render CheckboxComponent.new(id: customer.id, name: 'customer_ids[]', options: { value: customer.id }) %>
    </div>
    <div class="w-5/12 flex justify-center items-center text-black text-center font-semibold border-x border-slate-100 py-2 px-4">
      <%= customer.name %> 
    </div>
    <div class="w-4/12 flex justify-center items-center text-black text-center font-semibold border-x border-slate-100 py-2 px-4">
      <%= customer&.price&.quantity %>
    </div>
    <div class="table-actions" data-controller="swal">
      <% if action_name != "show" %>
        <%= link_to inline_svg_tag('icons/pencil-square.svg', class: 'icon-button-default'), edit_customer_path(customer), class: 'wrapper-icon-button-default' %>
        <%= button_to customer, method: :delete,
                                data: { 
                                  controller: "swal",
                                  swal_name_value: customer.name,
                                  action: "click->swal#single"
                                },
                                class: 'wrapper-icon-button-default' do %>
          <%= inline_svg_tag('icons/trash.svg', class: 'icon-button-default') %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</li>
