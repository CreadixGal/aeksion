<div class="w-full px-8">
  <div class="flex justify-between items-center my-8">
    <h1 class="font-bold text-4xl">Customers</h1>
  </div>
  <%= turbo_frame_tag :customers_index do %>
    <%= form_with(model: @customers, url: multiple_delete_customers_path, html: { class: 'w-full flex flex-col gap-8 mt-8 px-10', turbo: false }) do |form| %>
      <div class="min-w-full flex flex-col justify-center items-center mx-auto mb-10" data-controller="checkbox-select-all">
        <div id="" class="w-full flex justify-between border-x-2 border-t-2 border-b-0 border-indigo-500 bg-indigo-100 opacity-70">
          <div class="w-1/12 border-r border-indigo-400 px-4 py-2">
            <%= render CheckboxComponent.new(
                  id: 'select-all',
                  name: 'customer_ids[]',
                  options: {
                    display_label: true,
                    value: '',
                    action: 'checkAll',
                    target: 'parent'
                  }
                ) %>
          </div>
          <div class="w-9/12"></div>
          <div class="w-2/12 flex justify-center border-l border-indigo-400 px-4 py-2">
            <input type="submit" value="multiple delete" class="border border-amber-400 hover:bg-amber-400 px-4 py-2 rounded">
            <%= link_to inline_svg_tag('icons/plus-circle.svg', class: 'w-8 h-8'), new_customer_path, data: { turbo_frame: dom_id(Customer.new) }, class: 'rounded-lg py-3 ml-2 px-5 bg-green-300 hover:bg-green-500 inline-block font-medium m-2' %>
          </div>
        </div>
        <%= turbo_frame_tag Customer.new, class: 'w-full' %>
        <%= turbo_frame_tag :customers, class:'w-full' do %>
          <%= render @customers %>
        <% end %>
      </div>
      <%== pagy_nav(@pagy) %>
    <% end %>
  <% end %>
</div>
