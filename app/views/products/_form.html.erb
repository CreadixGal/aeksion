<%= turbo_frame_tag dom_id(product), class: 'w-full' do %>
  <div id="<%= dom_id product %>" class="w-full mx-8 py-2 px-4">
    <div class="flex bg-white border-t-8 border-t-indigo-400 rounded-lg shadow-lg p-4 gap-8">
      <%= form_with(model: product, class: 'contents') do |form| %>
        <div class="w-2/12 flex items-center">        
          <div class="flex w-full items-center justify-center bg-grey-lighter">
            <label class="w-64 flex flex-col items-center px-4 py-6 bg-white text-blue rounded-lg shadow-lg tracking-wide uppercase border border-blue cursor-pointer hover:bg-indigo-300 hover:text-white">
              <%= inline_svg_tag('icons/plus-circle.svg', class:'w-8 h-8 text-indigo-500')%>
              <span class="mt-2 text-sm text-indigo-500">Add a file</span>
              <%= form.file_field :image, class: 'hidden' %>
            </label>
          </div>
        </div>
        <div class="w-8/12 flex flex-col items-center gap-8 mr-4">
          <div class="w-full flex items-center justify-between">
            <span class="w-full text-xl text-center text-indigo-800 font-semibold">Name: <%= form.text_field :name, placeholder: 'Introduce nombre de producto', class:'text-center text-indigo-600 font-semibold' %></span>
            <span class="flex text-sm font-medium hover:text text-center text-indigo-600border-2 border-indigo-600 rounded-xl bg-indigo-300 py-3 px-6"><%= form.text_field :code, placeholder: 'Introduce codigo de producto', class:'text-center text-indigo-600 font-semibold' %></span>
          </div>
          <div class="w-full flex gap-8">
            <div class="w-full mx-4">
              <span class="text-indigo-600 mr-4">Tipo: </span>
              <%= form.select :kind, options_for_select([['Pale', 0], ['Box', 1]]), {}, { class: '' } %>
              <span class='text-center text-indigo-600 font-semibold'><%= product.kind %></span>
            </div>
            <div class="w-full">
              <span class="text-indigo-600 mr-4">Precio: </span>
              <%= form.number_field :price, placeholder: 'ex: 0.382', class: 'text-center text-indigo-600 font-semibold'%>
            </div>
            <div class="w-full">
              <span class="text-indigo-600 mr-4">Stock: </span>
              <%= form.number_field :price, placeholder: 'ex: 382', class: 'text-center text-indigo-600 font-semibold'%>
            </div>
          </div>
        </div>
        <div class="w-2/12 flex flex-col border-l border-indigo-200">
          <%= form.submit 'AÃ±adir', class: 'text-indigo-500 border berder-indigo-500 hover:bg-indigo-300 px-4 py-2 cursor-pointer'%>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
 