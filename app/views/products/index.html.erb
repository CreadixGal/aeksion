<div class="w-full px-8 flex flex-col justify-center items-center">
  <div class="flex justify-between items-center my-8">
    <h1 class="font-bold text-4xl">Products</h1>
  </div>
  <div class="w-full flex justify-between gap-8 my-3 px-10">
    <%= link_to inline_svg_tag('icons/plus-circle.svg', class: 'w-8 h-8'), new_product_path, data: { turbo_frame: dom_id(Product.new) }, class: 'rounded-lg py-3 ml-2 px-5 bg-green-300 hover:bg-green-500 inline-block font-medium m-2' %>
  </div>
  <%= turbo_frame_tag Product.new, class: 'w-full' %>
  <%= turbo_frame_tag :products, class:'w-full flex flex-col justify-center items-center' do %>
    <%== pagy_nav(@pagy)%>
    <%= render @products %>
  <% end %>

