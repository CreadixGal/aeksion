<!DOCTYPE html>
<html>
  <head>
    <title>Aeksion</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'tailwind', 'inter-font', 'data-turbo-track': 'reload' %>

    <%= stylesheet_link_tag 'application', 'data-turbo-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <main class="w-full flex justify-between" data-controller="toogle">
      <div class="fixed inset-0 px-4 py-6 pointer-events-none sm:p-6 sm:items-start sm:justify-end z-10">
        <div id="notification" class="flex flex-col items-end justify-center">
          <%= render 'layouts/shared/notification' %>
        </div>
      </div>
      <%= turbo_frame_tag 'modal' %>
      <%= render 'layouts/shared/aside_menu' if user_signed_in? %>
      <div class="w-full flex flex-col">
        <%= render 'layouts/shared/navbar' if user_signed_in?%>
        <%= yield %>
      </div>
    </main>
    <%= render 'layouts/shared/footer' %>
  </body>
</html>
